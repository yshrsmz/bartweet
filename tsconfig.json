{
    "compilerOptions": {
        "rootDir": "./src/ts",
        "outDir": "./app/js",
        "sourceMap": true,
        "strict": false,
        "strictPropertyInitialization": false,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es2015",
        "experimentalDecorators": true,
        "noImplicitAny": false,
    },
    "include": [
        "./src/ts/**/*",
        "./src/types/**/*"
    ]
}
