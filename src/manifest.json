{
    "name": "Omnitweety",
    "short_name": "Omnitweety",
    "manifest_version": 2,
    "version": "0.0.2",
    "description": "Update your Twitter status right from Chrome's Omnibox (URL bar).",
    "omnibox": {"keyword": "tw"},
    "icons": {"128": "assets/icon_128.png", "48": "assets/icon_48.png", "16": "assets/icon_16.png"},
    "background": {
        "scripts": [
            "js/chrome_ex_oauth.min.js",
            "js/background.min.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": ["chrome_ex_oauth.html"],
    "permissions": ["notifications", "tabs", "https://api.twitter.com/", "https://abs.twimg.com/", "https://pbs.twimg.com/"],
    "content_security_policy": "script-src 'self'; object-src 'self'; img-src 'self' https://abs.twimg.com/ https://pbs.twimg.com/"
}
