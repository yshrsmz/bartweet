{
    "name": "<%= htmlWebpackPlugin.options.appname %>",
    "short_name": "<%= htmlWebpackPlugin.options.appname %>",
    "manifest_version": 2,
    "version": "<%= htmlWebpackPlugin.options.appversion %>",
    "description": "Tweet your status & share what you are browsing now, from Omnibox (a.k.a. URL or Address bar)!",
    "omnibox": {"keyword": "<%= htmlWebpackPlugin.options.shortcut %>"},
    "icons": {
        "128": "assets/icon_128.png",
        "48": "assets/icon_48.png",
        "16": "assets/icon_16.png"
    },
    "background": {
        "scripts": <%= JSON.stringify(htmlWebpackPlugin.files.js.filter((v) => !v.includes('options.js'))) %>,
        "persistent": false
    },
    "options_page": "options.html",
    "web_accessible_resources": ["oauth.html"],
    "permissions": [
        "notifications",
        "tabs",
        "storage",
        "https://api.twitter.com/",
        "https://abs.twimg.com/",
        "https://pbs.twimg.com/",
        "http://fonts.googleapis.com/"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'; img-src 'self' https://abs.twimg.com/ https://pbs.twimg.com/"
}
